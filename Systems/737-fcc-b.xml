<?xml version="1.0"?>

<PropertyList>
 <!-- =============================================================== -->
 <!-- Roll Axis Modes                                                 -->
 <!-- =============================================================== -->

<!-- HDG SEL mode -->
   <filter>
    <name>heading bug error computer/normalizer for HDG mode</name>
    <debug>false</debug>
    <enable>
      <condition>
        <property>/autopilot/internal/LNAV-HDG</property>
      </condition>
    </enable>	
    <type>gain</type>
    <input>
      <property>autopilot/settings/heading-bug-deg</property>
      <offset>
        <property>orientation/heading-magnetic-deg</property>
        <scale>-1.0</scale>
      </offset>
    </input>
    <output>/autopilot/internal/fccb-heading-bug-error-deg</output>
    <period>
      <min>-180</min>
      <max>180</max>
    </period>
    <gain>1.0</gain>
  </filter>

<!-- GA mode -->
   <filter>
    <name>heading bug error computer/normalizer for GA mode</name>
    <debug>false</debug>
    <enable>
      <condition>
        <property>/autopilot/internal/GA-ROLL</property>
      </condition>
    </enable>	
    <type>gain</type>
    <input>
      <property>/autopilot/settings/ga-track-deg</property>
      <offset>
        <property>orientation/track-deg</property>
        <scale>-1.0</scale>
      </offset>
    </input>
    <output>/autopilot/internal/fcca-heading-bug-error-deg</output>
    <period>
      <min>-180</min>
      <max>180</max>
    </period>
    <gain>1.0</gain>
  </filter>

<!-- VOR/LOC mode -->
  <filter>
    <name>nav2 heading error computer/normalizer</name>
    <debug>false</debug>
    <type>gain</type>
    <input> <!-- this is for LOCALIZER CAPTURE -->
      <condition>
        <property>/instrumentation/nav[1]/nav-loc</property>
      </condition>
      <expression>
        <sum>
          <product>
            <property>/autopilot/internal/drift-angle-deg</property>
            <value>-1</value>
          </product>
          <product>
            <property>/instrumentation/nav[1]/heading-needle-deflection-norm</property>
            <value>30</value>
          </product>
          <product>
            <property>autopilot/internal/nav2-heading-needle-rate</property>
            <value>150</value>
          </product>
        </sum>
      </expression>
    </input>
    <input> <!-- this is for other modes (VOR, LNAV) -->
      <expression>
        <sum>
          <product>
            <property>/autopilot/internal/drift-angle-deg</property>
            <value>-1</value>
          </product>
          <product>
            <property>/instrumentation/nav[1]/heading-needle-deflection-norm</property>
            <value>90</value>
          </product>
          <product>
            <property>autopilot/internal/nav2-heading-needle-rate</property>
            <value>150</value>
          </product>
        </sum>
      </expression>
    </input>
    <output>/autopilot/internal/target-heading-shift-nav2</output>
      <min>-30</min>
      <max>30</max>
    <gain>1.0</gain>
  </filter>

   <filter>
    <name>heading bug error computer/normalizer for VOR/LOC mode</name>
    <debug>false</debug>
    <enable>
      <condition>
        <property>/autopilot/internal/LNAV-NAV</property>
      </condition>
    </enable>	
    <type>gain</type>
    <input> <!-- this is for LOCALIZER CAPTURE -->
      <condition>
        <property>/instrumentation/nav[1]/nav-loc</property>
      </condition>
      <expression>
        <sum>
          <property>/instrumentation/nav[1]/radials/selected-deg</property>
          <property>/environment/magnetic-variation-deg</property>
          <property>autopilot/internal/target-heading-shift-nav2</property>
          <product>
            <property>orientation/heading-deg</property>
            <value>-1</value>
          </product>
        </sum>
      </expression>
    </input>
    <input> <!-- this is for other modes (VOR, LNAV) -->
      <expression>
        <sum>
          <property>/instrumentation/nav[1]/radials/target-radial-deg</property>
          <property>autopilot/internal/target-heading-shift-nav2</property>
          <product>
            <property>orientation/heading-deg</property>
            <value>-1</value>
          </product>
        </sum>
      </expression>
    </input>
    <output>/autopilot/internal/fccb-heading-bug-error-deg</output>
    <period>
      <min>-180</min>
      <max>180</max>
    </period>
    <gain>1.0</gain>
  </filter>

<!-- LNAV mode -->
  <filter>
    <name>fms heading error computer/normalizer</name>
    <debug>false</debug>
    <type>gain</type>
    <enable>
      <condition>
        <property>/autopilot/internal/LNAV</property>
      </condition>
    </enable>
    <input> <!-- this is for LNAV -->
      <expression>
        <sum>
          <product>
            <property>/autopilot/internal/drift-angle-deg</property>
            <value>-1</value>
          </product>
          <product>
            <property>/autopilot/internal/fms-crosstrack-error-m</property>
            <value>0.03</value>
          </product>
          <product>
            <property>/autopilot/internal/fms-crosstrack-rate-mps</property>
            <value>0.45</value>
          </product>
        </sum>
      </expression>
    </input>
    <output>/autopilot/internal/target-heading-shift-fms</output>
      <min>-30</min>
      <max>30</max>
    <gain>1.0</gain>
  </filter>



   <filter>
    <name>heading bug error computer/normalizer</name>
    <debug>false</debug>
    <enable>
      <condition>
        <property>/autopilot/internal/LNAV</property>
      </condition>
    </enable>	
    <type>gain</type>
    <input>
      <condition>
        <property>/autopilot/internal/wp-crosstrack-hold</property>
      </condition>
      <expression>
        <sum>
          <property>/instrumentation/gps/wp/leg-true-course-deg</property>
          <property>autopilot/internal/target-heading-shift-fms</property>
          <product>
            <property>orientation/heading-deg</property>
            <value>-1</value>
          </product>
        </sum>
      </expression>
    </input>
    <input>
      <expression>
        <sum>
          <property>/autopilot/route-manager/wp/true-bearing-deg</property>
          <product>
            <property>/autopilot/internal/drift-angle-deg</property>
            <value>-1</value>
          </product>
          <product>
            <property>orientation/heading-deg</property>
            <value>-1</value>
          </product>
        </sum>
      </expression>
    </input>
    <output>/autopilot/internal/fccb-heading-bug-error-deg</output>
    <period>
      <min>-180</min>
      <max>180</max>
    </period>
    <gain>1.0</gain>
  </filter>

<!-- ###### Target bank calculator -->

  <pi-simple-controller>
    <name>Calculator for target bank in HDG mode</name>
    <debug>false</debug>
    <enable>
      <condition>
        <or>
          <property>/autopilot/internal/LNAV-HDG</property>
          <property>/autopilot/internal/LNAV-NAV</property>
          <property>/autopilot/internal/LNAV</property>
          <property>/autopilot/internal/GA-ROLL</property>
        </or>
      </condition>
    </enable>	
    <input>
      <prop>autopilot/internal/fccb-heading-bug-error-deg</prop>
    </input>
    <reference>
      <value>0</value>
    </reference>
    <output>
      <prop>/autopilot/settings/fccb-target-bank</prop>
    </output>
    <config>
      <Kp>-1.5</Kp>          <!-- proportional gain -->
      <Ki>0.0</Ki>          <!-- integral gain -->
      <u_min>/autopilot/settings/maximum-bank-neg</u_min> <!-- minimum output clamp -->
      <u_max>/autopilot/settings/maximum-bank</u_max>   <!-- maximum output clamp -->
    </config>
  </pi-simple-controller>

  <pi-simple-controller>
    <name>Roll rate calculator</name>
    <debug>false</debug>
    <enable>
      <condition>
        <or>
          <property>/autopilot/internal/LNAV-HDG</property>
          <property>/autopilot/internal/LNAV-NAV</property>
          <property>/autopilot/internal/LNAV</property>
          <property>/autopilot/internal/GA-ROLL</property>
        </or>
      </condition>
    </enable>	
    <input>
      <prop>/orientation/roll-deg</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/fccb-target-bank</prop>
    </reference>
    <output>
      <prop>/autopilot/settings/fccb-target-roll-rate</prop>
    </output>
    <config>
      <Kp>0.5</Kp>          <!-- proportional gain -->
      <Ki>0.0</Ki>          <!-- integral gain -->
      <u_min>
        <condition>
          <and>
            <property>/autopilot/internal/VORLOC-NAV2-ONCOURSE</property>
            <not>
              <property>/instrumentation/nav[1]/nav-loc</property>
            </not>
          </and>
        </condition>
        <value>-1.3</value>
      </u_min>
      <u_max>
        <condition>
          <and>
            <property>/autopilot/internal/VORLOC-NAV2-ONCOURSE</property>
            <not>
              <property>/instrumentation/nav[1]/nav-loc</property>
            </not>
          </and>
        </condition>
        <value>1.3</value>
      </u_max>
      <u_min>
        <condition>
          <and>
            <property>/autopilot/internal/LNAV-NAV</property>
            <not>
              <property>/autopilot/internal/VORLOC-NAV2-ONCOURSE</property>
            </not>
          </and>
        </condition>
        <value>-5.5</value>
      </u_min>
      <u_max>
        <condition>
          <and>
            <property>/autopilot/internal/LNAV-NAV</property>
            <not>
              <property>/autopilot/internal/VORLOC-NAV2-ONCOURSE</property>
            </not>
          </and>
        </condition>
        <value>5.5</value>
      </u_max>
      <u_min>-4</u_min> <!-- minimum output clamp -->
      <u_max>4</u_max>   <!-- maximum output clamp -->
    </config>
  </pi-simple-controller>

 <!-- =============================================================== -->
 <!-- Pitch Axis Modes                                                -->
 <!-- =============================================================== -->

 <!-- TOGA mode -->

 <filter>
  <name>VS translate B</name>
  <debug>false</debug>
  <enable>
   <condition>
    <not>
      <or>
        <and>
          <property>/autopilot/internal/PITCH-ACTIVE</property>
          <not><property>/autopilot/internal/TOGA</property></not>
        </and>
        <and>
          <property>/autopilot/internal/TOGA</property>
          <property>/autopilot/logic/toga-pitch</property>
        </and>
      </or>
    </not>
   </condition>
  </enable>
  <type>gain</type>
  <gain>1.0</gain>
  <input>autopilot/internal/current-vertical-speed-fpm</input>
  <output>/autopilot/settings/fccb-vertical-speed-fpm</output>
 </filter>

  <pid-controller>
    <name>TOGA mode B</name>
    <debug>false</debug>
    <enable>
      <condition>
        <and>
          <property>/autopilot/internal/TOGA</property>
          <property>/autopilot/logic/toga-pitch</property>
        </and>
      </condition>
    </enable>
    <input>
      <prop>/instrumentation/airspeed-indicator[1]/indicated-speed-kt</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-speed-kt</prop>
      <offset>20</offset>
    </reference>
    <output>
      <prop>/autopilot/settings/fccb-vertical-speed-fpm</prop>
    </output>
    <config>
      <Kp>-180</Kp>
      <beta>1.0</beta>
      <alpha>0.1</alpha>
      <gamma>0.0</gamma>
      <Ti>10.0</Ti>
      <Td>0.00001</Td>
      <u_min>0</u_min>
      <u_max>6000</u_max>
    </config>
  </pid-controller>

<!-- GO-AROUND MODE -->
  <pid-controller>
    <name>GA mode</name>
    <debug>false</debug>
    <enable>
      <condition>
        <property>/autopilot/internal/GA</property>
      </condition>
    </enable>
    <input>
      <prop>/instrumentation/airspeed-indicator[1]/indicated-speed-kt</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-speed-kt</prop>
    </reference>
    <output>
      <prop>/autopilot/settings/fccb-vertical-speed-fpm</prop>
    </output>
    <config>
      <Kp>-180</Kp>
      <beta>1.0</beta>
      <alpha>0.1</alpha>
      <gamma>0.0</gamma>
      <Ti>10.0</Ti>
      <Td>0.00001</Td>
      <u_min>1000</u_min>
      <u_max>3500</u_max>
    </config>
  </pid-controller>

 <!-- LVLCHG mode -->
  <pid-controller>
    <name>LVLCHG mode</name>
    <debug>false</debug>
    <enable>
      <condition>
        <property>/autopilot/internal/LVLCHG</property>
      </condition>
    </enable>
    <input>
      <prop>/instrumentation/airspeed-indicator[1]/indicated-speed-kt</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-speed-kt</prop>
    </reference>
    <output>
      <prop>/autopilot/settings/fccb-vertical-speed-fpm</prop>
    </output>
    <config>
      <Kp>-180</Kp>      <!-- proportional gain -->
      <beta>1.0</beta>    <!-- input value weighing factor -->
      <alpha>0.1</alpha>  <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>  <!-- input value weighing factor for -->
                          <!-- unfiltered derivative error -->
      <Ti>10.0</Ti>       <!-- integrator time -->
      <Td>0.00001</Td>    <!-- derivator time -->
      <u_min>/autopilot/settings/min-lvlchg-vs</u_min> <!-- minimum output clamp -->
      <u_max>/autopilot/settings/max-lvlchg-vs</u_max>  <!-- maximum output clamp -->
    </config>
  </pid-controller>

 <!-- ALT ACQ -->

  <pi-simple-controller>
    <name>Altitude Acquire</name>
    <debug>false</debug>
    <enable>
      <condition>
        <property>/autopilot/internal/VNAV-ALT-ACQ</property>
      </condition>
    </enable>	
    <input>
      <prop>/instrumentation/altimeter[1]/indicated-altitude-ft</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-altitude-mcp-ft</prop>
    </reference>
    <output>
      <prop>/autopilot/settings/fccb-vertical-speed-fpm</prop>
    </output>
    <config>
      <Kp>7.5</Kp>          <!-- proportional gain -->
      <Ki>0.0</Ki>          <!-- integral gain -->
      <u_min>/autopilot/internal/min-vs-fpm</u_min> <!-- minimum output clamp -->
      <u_max>/autopilot/internal/max-vs-fpm</u_max>   <!-- maximum output clamp -->
    </config>
  </pi-simple-controller>

 <!-- ALT HOLD -->

  <pi-simple-controller>
    <name>Altitude Hold</name>
    <debug>false</debug>
    <enable>
      <condition>
        <property>/autopilot/internal/VNAV-ALT</property>
      </condition>
    </enable>	
    <input>
      <prop>/instrumentation/altimeter[1]/pressure-alt-ft</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-alt-hold-ft</prop>
    </reference>
    <output>
      <prop>/autopilot/settings/fccb-vertical-speed-fpm</prop>
    </output>
    <config>
      <Kp>7.5</Kp>          <!-- proportional gain -->
      <Ki>0.0</Ki>          <!-- integral gain -->
      <u_min>/autopilot/internal/min-vs-fpm</u_min> <!-- minimum output clamp -->
      <u_max>/autopilot/internal/max-vs-fpm</u_max>   <!-- maximum output clamp -->
    </config>
  </pi-simple-controller>

 <!-- GLIDESLOPE mode -->

<filter>
  <type>gain</type>
  <gain>1</gain>
  <enable>
    <condition>
      <property>/autopilot/internal/VNAV-GS</property>
    </condition>
  </enable>	
  <input>
    <property>/instrumentation/nav/gs-rate-of-climb-fpm</property>
    <offset>
      <property>autopilot/internal/nav2-gs-rate</property>
      <scale>/autopilot/settings/gs-deviation-sensitivity</scale>
    </offset>
  </input>
  <output>
    <prop>/autopilot/settings/fccb-vertical-speed-fpm</prop>
  </output>
  <min>/autopilot/settings/vs-limitation</min>
  <max>0</max>
</filter>

 <!-- FLARE mode -->

<filter>
  <type>gain</type>
  <gain>1</gain>
  <enable>
    <condition>
      <property>/autopilot/internal/VNAV-FLARE</property>
    </condition>
  </enable>	
  <input>
    <expression>
      <sum>
        <product>
          <sum>
            <property>/position/altitude-agl-ft</property>
            <value>-6.5</value>
          </sum>
          <value>-7</value>
        </product>
        <value>-50</value>
      </sum>
    </expression>
  </input>
  <output>
    <prop>/autopilot/settings/fccb-vertical-speed-fpm</prop>
  </output>
</filter>

 <!-- VS mode -->

<filter>
  <type>gain</type>
  <gain>1</gain>
  <enable>
    <condition>
      <property>/autopilot/internal/VNAV-VS</property>
    </condition>
  </enable>	
  <input>
    <prop>/autopilot/settings/vertical-speed-fpm</prop>
  </input>
  <output>
    <prop>/autopilot/settings/fccb-vertical-speed-fpm</prop>
  </output>
</filter>

 <!-- VS hold for any mode -->

<filter>
  <type>gain</type>
  <gain>1</gain>
  <enable>
      <condition>
        <property>/autopilot/internal/PITCH-ACTIVE</property>
      </condition>
    </enable>
    <input>
      <condition>
        <or>
          <and>
            <property>/autopilot/internal/TOGA</property>
            <not><property>/autopilot/logic/toga-pitch</property></not>
            <greater-than>
              <property>/instrumentation/airspeed-indicator[1]/indicated-speed-kt</property>
              <value>60</value>
            </greater-than>
          </and>
          <and>
            <property>/autopilot/internal/GA</property>
            <less-than>
              <property>/autopilot/internal/current-vertical-speed-fpm</property>
              <value>1000</value>
            </less-than>
          </and>
        </or>
      </condition>
      <value>15</value>
    </input>	
    <input>
      <condition>
        <and>
          <property>/autopilot/internal/TOGA</property>
          <not><property>/autopilot/logic/toga-pitch</property></not>
          <less-than>
            <property>/instrumentation/airspeed-indicator[1]/indicated-speed-kt</property>
            <value>60</value>
          </less-than>
        </and>
      </condition>
      <value>-10</value>
    </input>
    <input>
      <expression>
        <sum>
          <product>
            <property>/orientation/alpha-deg</property>
            <cos>
              <div>
                <property>/orientation/roll-deg</property>
                <value>57.2957795131</value>
              </div>
            </cos>
          </product>
          <product>
            <asin>
              <div>
                <property>/autopilot/settings/fccb-vertical-speed-fpm</property>
                <product>
                  <property>/instrumentation/airspeed-indicator[1]/true-speed-kt</property>
                  <value>101.0696354508</value>
                </product>
              </div>
            </asin>
            <value>57.2957795131</value>
          </product>
        </sum>
      </expression> 
    </input>
  <output>
    <prop>/autopilot/settings/fccb-target-pitch-deg</prop>
  </output>
  <min>-10</min>
  <max> 20</max>
</filter>

</PropertyList>
