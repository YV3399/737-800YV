<?xml version="1.0"?>
<PropertyList>
   <path>vor.ac</path>
  
   <animation>
<type>material</type> 
<object-name>Frame</object-name>
<emission>
    <red>0.1</red>
    <green>0.1</green>
    <blue>0.1</blue>
	    <factor-prop>/controls/lighting/panel-light</factor-prop>
 </emission>
</animation> 

     <animation>
	<type>material</type> 
	<object-name>Face</object-name>
	<emission>
    		<red>0.8</red>
    		<green>0.8</green>
    		<blue>0.8</blue>
	    <factor-prop>/controls/lighting/panel-light</factor-prop>
 	</emission>
</animation> 
   <animation>
     <type>rotate</type>   
     <object-name>Face</object-name> 
     <property>orientation/heading-magnetic-deg</property>
     <axis>
     <x>1.0</x>
     <y>0.0</y>
     <z>0.0</z>
    </axis>   
   </animation> 
    
   <animation>   
    <type>rotate</type>   
     <object-name>Needle1</object-name>
    <property>instrumentation/nav/radials/actual-deg</property>
     <offset-deg>90</offset-deg>
     <factor>-1.0</factor>                         
     <axis>
     <x>1.0</x>
     <y>0.0</y>
     <z>0.0</z>
    </axis>   
    </animation>
    
   <animation>
    <type>rotate</type>
     <object-name>Needle1</object-name>
     <property>orientation/heading-magnetic-deg</property>      
     <scale>-1.0</scale> 
      <axis>
     <x>1.0</x>
     <y>0.0</y>
     <z>0.0</z>
    </axis> 
    </animation>    
     
    <animation>
    <type>rotate</type>
     <object-name>Needle2</object-name>
     <property>instrumentation/nav[1]/radials/actual-deg</property>
       <offset-deg>90</offset-deg>      
     <factor>-1.0</factor>                
     <axis>
     <x>1.0</x>
     <y>0.0</y>
     <z>0.0</z>
    </axis>      
    </animation>

     <animation>
    <type>rotate</type>
     <object-name>Needle2</object-name>
     <property>orientation/heading-magnetic-deg</property>     
     <scale>-1.0</scale> 
      <axis>
     <x>1.0</x>
     <y>0.0</y>
     <z>0.0</z>
    </axis> 
    </animation>
    
